rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files so visitors can see images.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to the 'offers' folder.
    // This covers creating, updating, and deleting files.
    match /offers/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
