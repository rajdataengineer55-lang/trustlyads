rules_version = '2';

// See: https://firebase.google.com/docs/storage/security
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read files from storage.
    // This is necessary for your offer images to be public.
    match /{allPaths=**} {
      allow read;
    }

    // Allow only authenticated users to upload files.
    // This secures your storage so only you (the admin) can add/change images.
    match /offers/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
