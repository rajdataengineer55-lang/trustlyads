rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files within the 'offers' folder.
    // This allows anyone visiting the website to see the offer images.
    match /offers/{allPaths=**} {
      allow read: if true;

      // Restrict write access (create, update, delete) to a specific admin user.
      // This ensures only the authorized admin can upload or manage offer images.
      allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }
  }
}
