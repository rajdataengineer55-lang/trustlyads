
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if the user has the 'admin' custom claim.
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Public Read, Admin Write for offers and stories
    match /{folder}/{allPaths=**} where folder == 'offers' || folder == 'stories' {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
