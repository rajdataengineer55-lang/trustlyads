rules_version = '2';

// By default, deny all reads and writes
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow read access to all files for everyone. 
    // This lets your app display images and videos to all users.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write (upload, update, delete) 
    // to the 'offers' and 'stories' folders specifically.
    match /offers/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /stories/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
