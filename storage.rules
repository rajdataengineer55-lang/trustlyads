rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files in 'offers' and 'stories' folders.
    match /{folder}/{allPaths=**} {
      allow read: if folder == 'offers' || folder == 'stories';
    }
    
    // Allow write access ONLY for the admin user in 'offers' and 'stories' folders.
    match /{folder}/{allPaths=**} {
      allow write: if (folder == 'offers' || folder == 'stories') && request.auth.uid == "8dbJ55nXdEXaOrlV4XosUMOq5E83";
    }
  }
}
