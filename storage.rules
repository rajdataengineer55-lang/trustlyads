rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files in offers and stories
    match /offers/{allPaths=**} {
      allow read: if true;
    }

    match /stories/{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access only for the specific admin UID
    match /{allPaths=**} {
      allow write: if request.auth.uid == "8dbJ55nXdEXaOrlV4XosUMOq5E83";
    }
  }
}
