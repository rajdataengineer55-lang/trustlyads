
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if the user is the designated admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }
    
    // Allow public read access to all files in all folders
    match /{allPaths=**} {
      allow read;
    }

    // Allow admin writes to the 'offers' directory
    match /offers/{fileName} {
      allow write: if isAdmin();
    }

    // Allow admin writes to the 'stories' directory
    match /stories/{fileName} {
      allow write: if isAdmin();
    }
  }
}
