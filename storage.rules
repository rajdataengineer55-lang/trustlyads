
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files in the 'offers' and 'stories' folders
    match /{folder}/{allPaths=**} where folder == 'offers' || folder == 'stories' {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // For any other paths, deny all access by default
    // You can add more specific rules here if needed
  }
}
