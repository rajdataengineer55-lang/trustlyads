
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth.token.admin == true;
    }
  
    // All files can be read by anyone (as they are public content)
    match /{allPaths=**} {
      allow read: if true;
    }

    // Only admins can upload files to the 'offers' or 'stories' folders.
    // This rule checks that the user is authenticated, is an admin, and the file is not excessively large.
    match /offers/{fileName} {
      allow write: if request.auth != null && isAdmin() && request.resource.size < 10 * 1024 * 1024;
    }
    
    match /stories/{fileName} {
      allow write: if request.auth != null && isAdmin() && request.resource.size < 10 * 1024 * 1024;
    }
  }
}
