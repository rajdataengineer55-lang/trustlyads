rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Anyone can read files from these public folders
    match /offers/{allPaths=**} {
      allow read: if true;
      // Only admins can write (upload, update, delete) to the offers folder
      allow write: if isAdmin();
    }
    
    match /stories/{allPaths=**} {
      allow read: if true;
      // Only admins can write (upload, update, delete) to the stories folder
      allow write: if isAdmin();
    }
    
    // Disallow all other reads/writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
