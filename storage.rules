rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Allow public read access to all files.
    // This is necessary for anyone to see images in the app.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict write access (create, update, delete) to admins only.
    // This applies to all paths, including 'offers' and 'stories'.
    // This prevents unauthorized users from uploading or deleting files.
    match /{allPaths=**} {
      allow write: if isAdmin();
    }
  }
}
