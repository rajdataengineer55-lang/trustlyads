rules_version = '2';

// By default, deny all reads and writes
service firebase.storage {
  match /b/{bucket}/o {
    // Allow read access to everyone for all files.
    // This allows the app to display images and other media.
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow write access (uploads) only to authenticated users (i.e., the admin).
    // This secures the bucket so that only the admin can upload new files.
    match /{allPaths=**} {
       allow write: if request.auth != null;
    }
  }
}
