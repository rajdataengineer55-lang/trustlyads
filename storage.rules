rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Offers images
    match /offers/{fileName} {
      allow read: if true;          // Anyone can view
      allow create, update, delete: if isAdmin(); // Only admins can upload/modify/delete
    }

    // Stories images
    match /stories/{fileName} {
      allow read: if true;          
      allow create, update, delete: if isAdmin(); 
    }

    // Optional: Future collections like user uploads or chat attachments
    match /{allOtherPaths=**} {
      allow read: if false;          // Block access by default
      allow write: if isAdmin();     // Only admin can write to other paths
    }
  }
}
