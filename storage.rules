rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if the user is the specific admin
    function isAdmin() {
      return request.auth != null && request.auth.email == "dandurajkumarworld24@gmail.com";
    }
    
    // Allow public read access to all files in all folders.
    // This allows anyone to see offer and story images.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow admins to write (upload, update, delete) files in the 'offers' folder.
    match /offers/{fileName} {
      allow write: if isAdmin();
    }
    
    // Allow admins to write (upload, update, delete) files in the 'stories' folder.
    match /stories/{fileName} {
       allow write: if isAdmin();
    }
  }
}
