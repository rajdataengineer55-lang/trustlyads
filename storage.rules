rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files within the 'offers' directory.
    // This allows anyone visiting your website to see the ad images.
    match /offers/{allPaths=**} {
      allow read: if true;

      // Restrict write access (upload, update, delete) to only the admin user.
      // This is based on the authenticated user's email address.
      allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }
  }
}
