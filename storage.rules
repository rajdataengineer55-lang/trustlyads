rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files, so anyone can see the offer images.
    match /{allPaths=**} {
      allow read;
    }

    // Allow writes (uploads) only for authenticated users. This secures your bucket
    // so that only the admin can upload new offer images.
    match /offers/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
