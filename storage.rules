rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files.
    // This allows your app to display images and videos to all users.
    match /{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write (upload, update, delete) to the 'offers' and 'stories' folders.
    // This secures your storage so only logged-in users (i.e., your admin account) can add new media.
    match /offers/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /stories/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
