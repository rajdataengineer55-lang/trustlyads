rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if the user is the admin
    function isAdmin() {
      return request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }

    // Rule for both 'offers' and 'stories' folders
    match /{folder}/{allPaths=**} {
      // Anyone can read (view/download) files.
      allow read: if true;
      
      // Only the admin can write (upload, update, delete) files.
      allow write: if isAdmin();
    }
  }
}
