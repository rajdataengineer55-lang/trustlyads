rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth.token.email == "dandurajkumarworld24@gmail.com";
    }

    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow admin writes to the 'offers' and 'stories' directories
    match /offers/{fileName} {
      allow write: if request.auth != null && isAdmin();
    }

    match /stories/{fileName} {
      allow write: if request.auth != null && isAdmin();
    }
  }
}
