rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Public read access for offer images
    match /offers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth.email == 'dandurajkumarworld24@gmail.com';
    }

    // Public read access for story images
    match /stories/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth.email == 'dandurajkumarworld24@gmail.com';
    }

  }
}
