rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow admin to write to the 'offers' folder
    match /offers/{allPaths=**} {
      allow write: if request.auth != null && request.auth.email == 'dandurajkumarworld24@gmail.com';
    }

    // Allow admin to write to the 'stories' folder
    match /stories/{allPaths=**} {
      allow write: if request.auth != null && request.auth.email == 'dandurajkumarworld24@gmail.com';
    }
  }
}
