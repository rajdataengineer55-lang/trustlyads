rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the 'offers' folder
    match /offers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Deny reads and writes to all other paths by default
    match /{allPaths=**} {
        allow read, write: if false;
    }
  }
}
