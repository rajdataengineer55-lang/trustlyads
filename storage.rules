service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the 'offers' directory.
    // This allows anyone visiting the site to see the offer images.
    // Restrict write access (upload, update, delete) to only authenticated users.
    match /offers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}