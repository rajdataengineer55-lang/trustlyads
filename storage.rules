rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // --- Offers Folder ---
    // Anyone can read images in the 'offers' folder.
    // Only admins can write to the 'offers' folder.
    match /offers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // --- Stories Folder ---
    // Anyone can read images in the 'stories' folder.
    // Only admins can write to the 'stories' folder.
    match /stories/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }
  }
}
