rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read for offer images, only admin can write
    match /offers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Allow public read for story images, only admin can write
    match /stories/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Deny access to all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
