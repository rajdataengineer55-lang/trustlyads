rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Rules for specific folders
    match /{folder}/{allPaths=**} {
      // Allow public read for images in 'offers' and 'stories' folders
      allow read: if folder in ['offers', 'stories'];
      
      // Only allow authenticated admins to write to these folders
      allow write: if folder in ['offers', 'stories'] && isAdmin();
    }
  }
}
