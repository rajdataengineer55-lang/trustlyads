rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow authenticated users to write to 'offers' and 'stories' folders
    match /offers/{fileName} {
      allow write: if request.auth != null;
    }
    
    match /stories/{fileName} {
      allow write: if request.auth != null;
    }
  }
}
