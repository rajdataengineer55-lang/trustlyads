rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
  	// Helper function to check for admin custom claim
    function isAdmin() {
    	return request.auth != null && request.auth.token.admin == true;
    }
  
    // Allow anyone to read all files. This is necessary for images and videos to be
    // publicly visible in the application.
    match /{allPaths=**} {
      allow read: true;
    }

    // Allow only admins to write (upload, update, delete) files in the 'offers' folder.
    match /offers/{allPaths=**} {
      allow write: if isAdmin();
    }
    
    // Allow only admins to write (upload, update, delete) files in the 'stories' folder.
    match /stories/{allPaths=**} {
       allow write: if isAdmin();
    }
  }
}