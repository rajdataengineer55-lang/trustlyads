rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Grant public read access to offer and story images
    match /offers/{allPaths=**} {
      allow read;
      // Require authentication for all uploads/writes/deletes to the offers folder
      allow write: if request.auth != null;
    }

    match /stories/{allPaths=**} {
      allow read;
      // Require authentication for all uploads/writes/deletes to the stories folder
      allow write: if request.auth != null;
    }
  }
}
