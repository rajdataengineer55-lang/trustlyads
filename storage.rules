
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Anyone can read files from the offers and stories folders.
    match /offers/{allPaths=**} {
      allow read: if true;
    }
    match /stories/{allPaths=**} {
      allow read: if true;
    }

    // Only the specific admin user can write, update, or delete files.
    match /offers/{allPaths=**} {
      allow write: if request.auth.uid == 'pYt24u6aAdPqB2L4sUIBq9AnTgy2';
    }
     match /stories/{allPaths=**} {
      allow write: if request.auth.uid == 'pYt24u6aAdPqB2L4sUIBq9AnTgy2';
    }
  }
}
