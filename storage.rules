rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isAdmin() {
      return request.auth.uid == "8dbJ55nXdEXaOrlV4XosUM0PTKe2";
    }

    // All files can be publicly read
    // Only the admin can upload, update, or delete any file
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}