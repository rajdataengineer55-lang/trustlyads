rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files. 
    // This is necessary for anyone to see the offer images on your site.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to write (upload, update, delete) files 
    // only in the 'offers' folder. This secures your storage bucket so
    // only logged-in users (i.e., the admin) can upload ad images.
    match /offers/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
