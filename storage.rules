rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files in the 'offers' folder.
    // This allows website visitors to see the images.
    match /offers/{allPaths=**} {
      allow read: if true;
      
      // Allow write access (upload, update, delete) only to authenticated users.
      // This is a more robust way to ensure the logged-in admin can upload files.
      allow write: if request.auth != null;
    }
  }
}
