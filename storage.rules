rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in the 'offers' or 'stories' folders
    match /{folder}/{fileId} where folder == 'offers' || folder == 'stories' {
      
      // Rule 1: Anyone can read files in these folders.
      // This is necessary for the images to be displayed on your public website.
      allow read: if true;
      
      // Rule 2: Only the authorized admin can write (upload, update, delete).
      // This is the critical rule that was failing before.
      allow write: if request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }
  }
}
