rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all images in the 'offers' folder.
    // This lets website visitors see the offer images.
    match /offers/{allPaths=**} {
      allow read: if true;
      
      // Allow write access (upload, update, delete) only to signed-in users.
      // Since only the admin can access the upload page in the app, this is secure.
      allow write: if request.auth != null;
    }
  }
}
