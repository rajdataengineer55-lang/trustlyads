rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }
  
    // Anyone can read any file. This is necessary for images to be public.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Only Admins can write to the 'offers' folder.
    match /offers/{allPaths=**} {
      allow write: if isAdmin();
    }
    
    // Only Admins can write to the 'stories' folder.
    match /stories/{allPaths=**} {
        allow write: if isAdmin();
    }
  }
}
