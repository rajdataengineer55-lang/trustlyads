rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to identify the admin by their UID
    function isAdmin() {
      return request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }

    // Rules for the 'offers' folder
    match /offers/{allPaths=**} {
      // Anyone can read offer images.
      allow read: true;
      // Only the admin can upload, update, or delete images.
      allow write: if isAdmin();
    }

    // Rules for the 'stories' folder
    match /stories/{allPaths=**} {
      // Anyone can read story images.
      allow read: true;
      // Only the admin can upload, update, or delete images.
      allow write: if isAdmin();
    }
  }
}
