rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Rules for all files
    // - Public read access is granted to all files.
    // - Write access is restricted to authenticated admins only.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
