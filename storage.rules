
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Public read access for all files in both folders.
    // This allows anyone to see the images on your website.
    match /offers/{fileName} {
      allow read;
      // Only admins can upload files to the 'offers' folder.
      allow write: if isAdmin();
    }

    match /stories/{fileName} {
      allow read;
      // Only admins can upload files to the 'stories' folder.
      allow write: if isAdmin();
    }
  }
}
