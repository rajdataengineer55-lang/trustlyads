rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Grant read access to everyone for all files
      allow read: if true;
      
      // Grant write access only to the admin, and only for files within 'offers' or 'stories' folders.
      allow write: if request.auth != null &&
                    request.auth.token.email == 'dandurajkumarworld24@gmail.com' &&
                    (allPaths.matches('offers/.*') || allPaths.matches('stories/.*'));
    }
  }
}