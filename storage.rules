rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Allow public read access for all files in 'offers' and 'stories'
    match /{folder}/{fileId}/{allPaths=**}
    where folder IN ['offers', 'stories'] {
      allow read: if true;
    }
    
    // Allow admin write access (create, update, delete) for 'offers' and 'stories'
    match /{folder}/{fileId}/{allPaths=**}
    where folder IN ['offers', 'stories'] {
       allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }
  }
}
