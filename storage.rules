rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files in offers and stories folders.
    match /offers/{allPaths=**} {
      allow read: if true;
    }
    match /stories/{allPaths=**} {
      allow read: if true;
    }
    
    // Only an admin with a custom claim can write (upload, update, delete)
    // to the offers and stories folders.
    match /{folder}/{allPaths=**} {
      allow write: if folder in ['offers', 'stories'] && request.auth.token.admin == true;
    }
  }
}
