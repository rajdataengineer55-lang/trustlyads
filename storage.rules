rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the 'offers' and 'stories' folders.
    match /{folder}/{allPaths=**} {
      allow read: if folder == 'offers' || folder == 'stories';
    }

    // Allow the admin user to write (create, update, delete) files.
    match /{allPaths=**} {
        allow write: if request.auth.uid == "8dbJ55nXdEXaOrlV4XosUMOq5E83";
    }
  }
}
