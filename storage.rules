rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to read from these folders
    match /offers/{allPaths=**} {
      allow read;
    }
    match /stories/{allPaths=**} {
      allow read;
    }

    // Allow any authenticated user to upload to these folders
    match /offers/{allPaths=**} {
      allow write: if request.auth != null;
    }
    match /stories/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
