rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if the user is the authorized admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "dandurajkumarworld24@gmail.com";
    }

    // Allow public read access to all offer and story images/videos.
    // Restrict write access (uploads, deletes) to only the admin user.
    match /offers/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /stories/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
