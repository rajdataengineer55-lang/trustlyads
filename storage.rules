rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in any folder.
    match /{allPaths=**} {
      // Allow anyone to read (view) any file. This is needed for public images.
      allow read: if true;
      
      // Allow write (upload, update, delete) only if the user is the admin.
      allow write: if request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }
  }
}
