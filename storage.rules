rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if the user is the admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "dandurajkumarworld24@gmail.com";
    }

    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Secure the 'offers' folder.
    // Only the admin can upload or delete files here.
    match /offers/{fileName} {
      allow write: if isAdmin();
    }
    
    // Secure the 'stories' folder.
    // Only the admin can upload or delete files here.
    match /stories/{fileName} {
      allow write: if isAdmin();
    }
  }
}
