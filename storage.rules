
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if a user is signed in.
    function isSignedIn() {
      return request.auth != null;
    }

    // Allow anyone to read images (so they display on the website).
    // Allow any authenticated user to write (upload). In practice, this is only
    // the admin user via the admin panel, but this rule allows for future
    // features where regular users might upload content.
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isSignedIn();
    }
  }
}
