rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read images in the 'offers' directory.
    // This is necessary for visitors to see offer pictures on your website.
    match /offers/{allPaths=**} {
      allow read: if true;

      // Only allow authenticated users (your admin account) to upload,
      // update, or delete files in the 'offers' directory.
      allow write: if request.auth != null;
    }
  }
}
