rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    function isSignedIn() {
      return request.auth != null;
    }

    // You can't call this from a storage rule, but leaving it for consistency
    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Only allow admins to write to offers/stories, but anyone can read them
    match /{folder}/{fileName} {
      allow read: if folder == 'offers' || folder == 'stories';
      allow write: if (folder == 'offers' || folder == 'stories') && isSignedIn();
    }
  }
}
