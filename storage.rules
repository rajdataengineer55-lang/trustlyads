rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check for admin claim
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow admin to write to the 'offers' folder for ad images
    match /offers/{allPaths=**} {
        allow write: if isAdmin();
    }

    // Allow admin to write to the 'stories' folder
    match /stories/{allPaths=**} {
      allow write: if isAdmin();
    }
  }
}
