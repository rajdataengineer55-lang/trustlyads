
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow public read access to all files
    // This is necessary so that anyone visiting your site can see the offer images.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Only allow authenticated users to write (upload, update, delete) files.
    // This secures your storage so only you (the admin) can add or change images.
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
