rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Helper function to check for admin status
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }
  
    // Allow public read access to all files.
    // This is necessary so that anyone visiting the site can see the offer images.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Restrict write access (uploads, deletes) to only admins.
    // This applies to all folders (offers, stories, etc.).
    match /{allPaths=**} {
      allow write: if isAdmin();
    }
  }
}
