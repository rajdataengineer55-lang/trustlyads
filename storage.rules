
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for all files inside the 'offers' folder.
    // This allows anyone to see the offer images on your website.
    match /offers/{allPaths=**} {
      allow read: if true;

      // Allow write (upload, update, delete) access only if the user is
      // the authenticated admin.
      allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }
  }
}
