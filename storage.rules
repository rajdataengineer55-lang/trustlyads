rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Function to check if the user is the admin
    function isAdmin() {
      return request.auth != null && request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }

    // Rules for the 'offers' folder
    match /offers/{allPaths=**} {
      // Anyone can read the images (needed for the public website)
      allow read: if true;
      
      // Only the admin can upload, change, or delete images
      allow write: if isAdmin();
    }

    // Rules for the 'stories' folder
    match /stories/{allPaths=**} {
      // Anyone can read the images
      allow read: if true;

      // Only the admin can upload, change, or delete images
      allow write: if isAdmin();
    }
  }
}
