rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Public Access Rules ---
    // Anyone can read offers and stories.
    // Any signed-in user can create a review.

    match /offers/{offerId} {
      allow read: if true;
      
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
    }

    match /stories/{storyId} {
      allow read: if true;
    }

    // --- Admin-specific Write Rules ---
    // The admin has write access to all collections needed for the app.
    // This is better than a single wildcard to avoid accidental conflicts.
    
    match /offers/{offerId} {
      allow write: if request.auth.uid == "8dbJ55nXdEXaOrlV4XosUMOq5E83";
    }

    match /stories/{storyId} {
       allow write: if request.auth.uid == "8dbJ55nXdEXaOrlV4XosUMOq5E83";
    }
  }
}
