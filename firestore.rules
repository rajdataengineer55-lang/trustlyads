
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Offers can be read by anyone, but only created, updated, or deleted by an admin.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin(); // 'write' covers create, update, delete

      // Reviews can be read by anyone.
      // Any authenticated user can create a review.
      // Only admins can delete reviews.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }

      // Stories can be read by anyone.
      // Only admins can create, update, or delete stories.
      match /stories/{storyId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // The follower count can be read by anyone.
    match /meta/stats {
      allow get: if true;
      allow write: if false; // Should only be written by Cloud Functions
    }

    // A user can only follow/unfollow for themselves.
    match /followers/{userId} {
      allow read: if true;
      allow create, delete: if request.auth.uid == userId;
      allow update: if false;
    }
    
    // User role information.
    // Can be read by any authenticated user (needed for the admin panel).
    // Can only be written to by an admin.
    match /users/{userId} {
        allow read: if request.auth != null;
        allow write: if isAdmin();
    }
  }
}
