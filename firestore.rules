rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admin has full read/write access to everything.
    match /{document=**} {
      allow read, write: if request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }

    // Public can read a single offer only if it is not hidden.
    match /offers/{offerId} {
      allow get: if resource.data.isHidden == false;
    }

    // Public can read reviews for any offer.
    match /offers/{offerId}/reviews/{reviewId} {
        allow read: if true;
    }
    
    // Public can query the list of all offers.
    match /offers/{offerId} {
      allow list: if true;
    }
    
    // Public can read and query all stories.
    match /stories/{storyId} {
      allow read: if true;
    }
  }
}
