rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow ANYONE to READ offers and stories
    match /offers/{offerId} {
      allow get: if resource.data.isHidden == false;
      allow list: if true; // Allow querying the collection
      
      // Allow ANYONE to READ reviews
      match /reviews/{reviewId} {
        allow get, list: if true;
      }
    }
    
    match /stories/{storyId} {
      allow get, list: if true;
    }

    // Allow ONLY the ADMIN to WRITE offers, stories, and reviews
    match /offers/{offerId} {
      allow write: if request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
      
      // Allow ANY authenticated user to create a review
      match /reviews/{reviewId} {
        allow create: if request.auth != null;
        // Only admin can delete reviews
        allow delete, update: if request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
      }
    }
    
    match /stories/{storyId} {
       allow write: if request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }
  }
}
