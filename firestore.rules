rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Offers can be read by anyone, but only written by admins.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();

      // Reviews can be read by anyone.
      // Any authenticated user can create a review.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }
      
      // Stories can be read by anyone, but only written by admins.
      match /stories/{storyId} {
          allow read: if true;
          allow write: if isAdmin();
      }
    }

    // The follower count should be publicly readable.
    match /meta/stats {
      allow get: if true;
      allow list, write: if false; // Nobody can list or write to this collection directly
    }

    // Followers can only be created/deleted by the user themselves.
    // This allows a user to follow and unfollow.
    match /followers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
