rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Offers Collection
    // - Anyone can read offers.
    // - Only admins can create, update, or delete offers.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;

      // Reviews Sub-collection
      // - Anyone can read reviews.
      // - Any signed-in user can create a review.
      // - Only admins can update or delete reviews.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.token.admin == true;
      }
    }

    // Stories Collection
    // - Anyone can read stories.
    // - Only admins can write stories.
    match /stories/{storyId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
