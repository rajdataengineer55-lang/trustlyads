
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Offers are publicly readable.
    // Only admins can create, update, or delete offers.
    match /offers/{offerId} {
      allow read;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;

      // Reviews are publicly readable.
      // Any authenticated user can create a review.
      // Only admins can delete reviews.
      match /reviews/{reviewId} {
        allow read;
        allow create: if request.auth != null;
        allow delete: if request.auth != null && request.auth.token.admin == true;
      }

      // Stories are publicly readable.
      // Only admins can create or delete stories.
      match /stories/{storyId} {
        allow read;
        allow create, delete: if request.auth != null && request.auth.token.admin == true;
      }
    }

    // Users can only manage their own follower document.
    match /followers/{userId} {
      allow read: if request.auth != null;
      allow create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // The follower count is publicly readable.
    // Writes are disallowed from the client (only backend functions can write).
    match /meta/{docId} {
      allow read;
      allow write: if false;
    }
  }
}
