rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the authorized admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "dandurajkumarworld24@gmail.com";
    }

    // Rules for the 'followers' collection
    match /followers/{userId} {
      // Anyone can read follower counts
      allow read: if true;
      // Only a user can follow/unfollow themselves, or the admin can manage followers
      allow write: if request.auth.uid == userId || isAdmin();
    }
    
    // Rules for the main 'offers' collection and its subcollections
    match /offers/{offerId} {
      // Allow everyone to read offers
      allow read: if true;
      // Allow only the admin to create, update, or delete offers
      allow create, update, delete: if isAdmin();

      // Rules for the 'reviews' subcollection
      match /reviews/{reviewId} {
        // Allow everyone to read reviews
        allow read: if true;
        // Allow anyone to create a new review
        allow create: if true;
        // Disallow updating or deleting reviews
        allow update, delete: if false;
      }
      
      // Rules for the 'stories' subcollection
      match /stories/{storyId} {
        // Allow everyone to read stories
        allow read: if true;
        // Allow only the admin to create new stories
        allow create: if isAdmin();
        // Disallow updating or deleting stories
        allow update, delete: if false;
      }
    }
  }
}
