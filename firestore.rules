rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.uid == "8dbJ55nXdEXaOrlV4XosUM0PTKe2";
    }

    // Public can read offers and reviews
    // Logged-in users can create reviews
    // Admin can write/delete offers and reviews
    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();

      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }
    }

    // Public can read stories
    // Admin can write/delete stories
    match /stories/{storyId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Fallback for any other collections - only admin has access
    match /{path=**}/documents/{document} {
      allow read, write: if isAdmin();
    }
  }
}