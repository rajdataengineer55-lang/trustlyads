rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read on offers
    // Allow only the admin to create, update, or delete offers
    match /offers/{offerId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';

      // Anyone can read reviews
      // Only signed-in users can create reviews
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
      
      // Anyone can read stories
      // Only the admin can create stories
      match /stories/{storyId} {
        allow read: if true;
        allow create: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
      }
    }

    // Allow users to add themselves as followers, but not read other followers
    match /followers/{userId} {
      allow read, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow list: if request.auth != null; // Allow clients to query the collection
    }
  }
}