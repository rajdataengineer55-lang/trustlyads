
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth.token.admin == true;
    }

    match /offers/{offerId} {
      allow read: if resource.data.isHidden == false || isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /followers/{userId} {
      allow read, write: if request.auth.uid != null;
    }
    
    match /stories/{storyId} {
      allow read: if true; // Stories are public
      allow create, delete: if isAdmin();
    }

    // Rules for the Onboarding collection
    match /onboardedUsers/{userId} {
      // Admins can create new documents in this collection.
      allow create: if isAdmin();
      
      // Admins can read, update, or delete existing documents.
      allow read, update, delete: if isAdmin();
    }
  }
}
