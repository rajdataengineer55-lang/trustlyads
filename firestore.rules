rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the authorized admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "dandurajkumarworld24@gmail.com";
    }
    
    // Offers can be read by anyone, but only created/updated/deleted by an admin.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();

      // Reviews can be read by anyone, but only created by a signed-in user.
      // Admin can delete them if needed (cascades from offer deletion).
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }

      // Stories can be read by anyone, but only created, updated, or deleted by the admin.
      match /stories/{storyId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Followers can be read by anyone (for follower count).
    // Users can only follow/unfollow themselves.
    match /followers/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
