rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Public Access & Logged-in User Rules ---

    // Offers can be read by anyone.
    match /offers/{offerId} {
      allow read: if true;
      
      // Reviews can be read by anyone, but only created by logged-in users.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
    }

    // Stories can be read by anyone.
    match /stories/{storyId} {
      allow read: if true;
    }
    
    // --- Admin-Specific Write Rules ---
    
    // The admin has full write access (create, update, delete) to everything.
    // This rule is checked *in addition* to the read rules above.
    match /{document=**} {
      allow write: if request.auth.uid == "8dbJ55nXdEXaOrlV4XosUM0PTKe2";
    }
  }
}
