
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user has the 'admin' custom claim.
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Offers can be read by anyone, but only created, updated, or deleted by an admin.
    match /offers/{offerId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
      
      // Reviews and Stories can be read by anyone.
      // Writing is restricted to the admin.
      match /{subcollection}/{docId} where subcollection == 'reviews' || subcollection == 'stories' {
        allow read: if true;
        allow create, update, delete: if isAdmin();
      }
    }
    
    // Followers collection can be read by anyone (for follower count).
    // A user can only follow/unfollow for themselves (document ID matches their UID).
    match /followers/{userId} {
      allow read: if true;
      allow create, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
