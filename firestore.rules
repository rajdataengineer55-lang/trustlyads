rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Offers Collection
    match /offers/{offerId} {
      // Anyone can read offers.
      allow read: if true;
      
      // Only users with an admin custom claim can create, update, or delete offers.
      allow write: if request.auth.token.admin == true;

      // Reviews Subcollection
      match /reviews/{reviewId} {
        // Anyone can read reviews.
        allow read: if true;
        
        // Any authenticated user can create a review.
        allow create: if request.auth != null;
        
        // Only admins can update or delete reviews.
        allow update, delete: if request.auth.token.admin == true;
      }
    }

    // Stories Collection
    match /stories/{storyId} {
      // Anyone can read stories.
      allow read: if true;
      
      // Only admins can create, update, or delete stories.
      allow write: if request.auth.token.admin == true;
    }

    // Followers Collection (example of another collection)
    match /followers/{userId} {
        // Users can only follow/unfollow themselves. Admins can manage all.
        allow read, delete: if request.auth.uid == userId || request.auth.token.admin == true;
        allow create: if request.auth.uid == userId;
    }
  }
}
