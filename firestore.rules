
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Offers can be read by anyone if they are not hidden.
    // Writes are restricted to admins, with a special exception for incrementing counters.
    match /offers/{offerId} {
      allow read: if resource.data.isHidden == false || request.auth.token.admin == true;

      // Allow admins to create, update, delete
      allow write: if request.auth.token.admin == true;

      // Allow anyone to update ONLY the view or click counts
      allow update: if request.auth != null
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views', 'clicks']);
    }

    // Stories can be read by anyone.
    // Only admins can create or delete stories.
    match /stories/{storyId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // Followers can be read by anyone (for total count).
    // Authenticated users can follow/unfollow (write to their own document).
    match /followers/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
