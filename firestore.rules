rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Admin Override ---
    // This rule must come first to be evaluated correctly for the admin.
    match /{document=**} {
      allow read, write: if request.auth.uid == "8dbJ55nXdEXaOrlV4XosUMOq5E83";
    }

    // --- Public Read Access Rules ---

    // Offers can be read by anyone.
    match /offers/{offerId} {
      allow read: if true;
      
      // Reviews can be read by anyone, but only created by logged-in users.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
    }

    // Stories can be read by anyone.
    match /stories/{storyId} {
      allow read: if true;
    }
  }
}
