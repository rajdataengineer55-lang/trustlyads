
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to offers, stories, and reviews
    match /offers/{offerId} {
      allow read: if true;
      // Allow only the admin to create, update, or delete offers
      allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
      
      match /reviews/{reviewId} {
        allow read: if true;
        // Allow any authenticated user to create reviews
        allow create: if request.auth != null;
        allow update, delete: if false; // Disallow updating/deleting reviews for now
      }
    }

    match /stories/{storyId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }

    // Allow any authenticated user to follow/unfollow their own document
    match /followers/{userId} {
      allow read, create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow admin to read the entire followers collection for notifications
    match /followers/{follower} {
      allow list: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }

    // Allow admin to read the stats document
    match /meta/stats {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }
  }
}
