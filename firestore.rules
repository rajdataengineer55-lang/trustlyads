rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the authorized admin
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Offers can be read by anyone, but only created/updated/deleted by an admin.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();

      // Reviews can be read by anyone.
      // Any authenticated user can create a review.
      // Only an admin can delete a review (for moderation).
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete, update: if isAdmin();
      }

      // Stories can be read by anyone.
      // Only an admin can create or delete stories.
      match /stories/{storyId} {
        allow read: if true;
        allow write: if isAdmin();
      }
    }

    // Followers can be read by anyone (for follower count).
    // Any authenticated user can follow/unfollow (create/delete their own doc).
    match /followers/{userId} {
      allow read: if true;
      allow create, delete: if request.auth.uid == userId;
    }
    
    // Admins collection can only be accessed by admins for reading.
    // This collection is written to by the setAdminClaim Cloud Function.
    match /admins/{userId} {
        allow get: if isAdmin();
        allow list, create, update, delete: if false;
    }
  }
}
