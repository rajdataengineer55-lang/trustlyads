
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Offers can be read by anyone, but only created, updated, or deleted by an admin.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;

      // Reviews can be read by anyone.
      // They can only be created by signed-in users.
      // They can only be deleted by an admin.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if request.auth.token.admin == true;
      }
    }

    // Stories can be read by anyone, but only created or deleted by an admin.
    match /stories/{storyId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;
    }

    // Followers can be read by anyone (for follower count).
    // Only signed-in users can follow/unfollow (write to their own follower doc).
    match /followers/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
