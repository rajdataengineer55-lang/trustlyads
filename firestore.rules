rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default: Deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // --- OFFERS ---
    // Anyone can read offers.
    // Only the admin can create, update, or delete offers.
    match /offers/{offerId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';

      // --- REVIEWS (subcollection) ---
      // Anyone can read reviews.
      // Any signed-in user can create a review.
      // Only the admin can update/delete reviews.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
      }

      // --- STORIES (subcollection) ---
      // Anyone can read stories.
      // Only the admin can create, update, or delete stories.
      match /stories/{storyId} {
        allow read: if true;
        allow create, update, delete: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
      }
    }
    
    // --- FOLLOWERS ---
    // Anyone can read the list of followers (for the count).
    // Only a signed-in user can write to their own follower document.
    match /followers/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
