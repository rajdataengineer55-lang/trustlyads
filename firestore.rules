rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin status
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }
  
    // Offers can be read by anyone, but only created, updated, or deleted by an admin.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin();
      
      // Reviews can be written by any authenticated user.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin(); // Only admin can moderate reviews
      }
    }

    // Followers can be created/deleted by any authenticated user for their own document.
    // Reading the whole collection is restricted to admins.
    match /followers/{userId} {
      allow read, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }

    // Admins can read the full list of followers.
    match /followers/{followerId} {
        allow list: if isAdmin();
    }
    
    // Meta collection can be read by anyone, but only written to by admin (for stats).
    match /meta/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
