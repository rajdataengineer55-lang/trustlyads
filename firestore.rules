rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Offers Collection ---
    match /offers/{offerId} {
      // Anyone can read offers.
      allow get, list: if true;
      
      // Only admins can create, update, or delete offers.
      allow write: if request.auth.token.admin == true;

      // --- Reviews Subcollection ---
      match /reviews/{reviewId} {
        // Anyone can read reviews.
        allow get, list: if true;
        
        // Any signed-in user can create a review.
        allow create: if request.auth != null;

        // Only admins can update or delete reviews.
        allow update, delete: if request.auth.token.admin == true;
      }
    }

    // --- Stories Collection ---
    match /stories/{storyId} {
      // Anyone can read stories.
      allow get, list: if true;
      
      // Only admins can write (create, update, delete) stories.
      allow write: if request.auth.token.admin == true;
    }
  }
}
