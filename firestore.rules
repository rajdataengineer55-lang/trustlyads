rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read on the follower count, but secure writes.
    match /meta/stats {
      allow get: if true;
      allow list, write: if request.auth != null && request.auth.token.admin == true;
    }

    // Any logged-in user can follow/unfollow by creating/deleting their own doc.
    match /followers/{userId} {
      allow get: if true;
      allow create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Offers are public to read, but only admins can modify them.
    match /offers/{offerId} {
      allow get, list: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;

      // Any authenticated user can write a review.
      match /reviews/{reviewId} {
        allow get, list: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.token.admin == true;
      }
      
      // Only admins can add stories.
      match /stories/{storyId} {
        allow get, list: if true;
        allow create, update, delete: if request.auth != null && request.auth.token.admin == true;
      }
    }
  }
}