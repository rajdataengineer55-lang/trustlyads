
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // HELPER FUNCTION: Check if the user is the admin.
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }

    // OFFERS: Public read, admin write.
    match /offers/{offerId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();

      // REVIEWS: Public read, authenticated user write.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false; // Reviews cannot be edited/deleted by users for now.
      }
    }

    // STORIES: Public read, admin write.
    match /stories/{storyId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // FOLLOWERS: Public read, user-specific write.
    match /followers/{userId} {
        allow read: if true;
        allow create: if request.auth != null && request.auth.uid == userId;
        allow delete: if request.auth.uid == userId;
    }

    // METADATA: Public read, backend-only write.
    match /meta/{docId} {
      allow read: if true;
      allow write: if false; // Should only be updated by backend functions.
    }
  }
}
