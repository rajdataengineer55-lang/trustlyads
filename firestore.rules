rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access to offers, reviews, and stories, as they are public content.
    // This simplifies the rules and ensures the frontend can fetch all necessary data.
    match /offers/{offerId} {
      allow read: if true;

      // Allow write access (create, update, delete) only for the authorized admin.
      // This rule applies to the offer document itself.
      allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
      
      // Allow any signed-in user to create reviews.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        // Only admin can update/delete reviews.
        allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
      }

      // Allow only the admin to create stories.
      match /stories/{storyId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
      }
    }

    // Allow any signed-in user to add/remove themselves from the followers list.
    // Users can only affect their own document.
    match /followers/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
