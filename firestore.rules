rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin Rule: Grant the specified admin UID full read/write access to everything.
    // This is the master rule that allows the admin to manage the site.
    match /{document=**} {
      allow read, write: if request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }

    // --- Public Read-Only Rules ---

    // Anyone can get a list of offers.
    match /offers/{offerId} {
      allow list: if true;
    }

    // Anyone can read a specific offer, but only if it is not hidden.
    // The admin can read hidden offers because of the master rule above.
    match /offers/{offerId} {
      allow get: if resource.data.isHidden == false;
    }
    
    // Anyone can read stories.
    match /stories/{storyId} {
      allow read: if true;
    }
    
    // Anyone can read reviews for any offer.
    match /offers/{offerId}/reviews/{reviewId} {
        allow read: if true;
    }
  }
}
