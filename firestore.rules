rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Offers can be read by anyone, but only created, updated, or deleted
    // by authenticated users (specifically, admins, checked in backend code).
    match /offers/{offerId} {
      allow read;
      allow write: if request.auth != null;
    }
    
    // Stories can be read by anyone.
    // They can be created and deleted by authenticated admins.
    match /stories/{storyId} {
        allow read;
        allow write: if request.auth != null;
    }

    // Followers can be read by anyone (for follower counts).
    // A user can only write to their own follower document.
    match /followers/{userId} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny all other writes
    match /{document=**} {
      allow read: if false; // Deny all other reads unless explicitly allowed
    }
  }
}
