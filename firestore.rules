rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ADMIN RULE: The user with this specific UID is the admin and has unrestricted access to everything.
    // This is the master rule that allows the admin to manage the site.
    match /{document=**} {
      allow read, write: if request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }

    // PUBLIC READ RULES: These rules apply to everyone else.

    // Allow reading the list of offers.
    match /offers/{offerId} {
       allow list: if true;
    }
    
    // Allow reading a single offer, but only if it is not hidden.
    match /offers/{offerId} {
      allow read: if resource.data.isHidden == false;
    }

    // Allow reading stories and reviews for any offer.
    match /stories/{storyId} {
      allow read: if true;
    }
    match /offers/{offerId}/reviews/{reviewId} {
      allow read: if true;
    }
  }
}
