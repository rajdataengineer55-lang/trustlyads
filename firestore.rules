rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth != null && request.auth.token.admin == true;
    }

    // Offers Collection
    match /offers/{offerId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();

      // Reviews Subcollection
      match /reviews/{reviewId} {
        allow get, list: if true;
        allow create: if request.auth != null;
        allow delete: if isAdmin(); // Only admin can delete reviews
      }
    }

    // Stories Collection
    match /stories/{storyId} {
      allow get, list: if true;
      allow create: if request.auth != null && isAdmin(); // Only admins can create stories
      allow delete: if isAdmin(); // Only admin can delete stories
    }
  }
}
