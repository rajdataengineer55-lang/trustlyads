rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is the admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == "dandurajkumarworld24@gmail.com";
    }

    // Rule for the 'followers' collection
    match /followers/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId; // Users can follow/unfollow themselves
    }
    
    // Rules for the 'offers' collection and its subcollections
    match /offers/{offerId} {
      allow read: if true; // Anyone can read an offer
      allow write: if isAdmin(); // Only admin can create, update, delete an offer document

      // Rules for the 'reviews' subcollection
      match /reviews/{reviewId} {
        allow read: if true; // Anyone can read reviews
        allow create: if request.auth != null; // Any authenticated user can create a review
        allow update, delete: if isAdmin(); // Only admin can moderate reviews
      }

      // Rules for the 'stories' subcollection
      match /stories/{storyId} {
        allow read: if true; // Anyone can read stories
        allow create: if isAdmin(); // Only admin can create a story
        allow update, delete: if isAdmin(); // Only admin can delete a story
      }
    }
  }
}