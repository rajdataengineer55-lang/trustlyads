rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read access to offers, but only admins can write.
    match /offers/{offerId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null && request.auth.token.admin == true;

      // Allow any authenticated user to create reviews.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.token.admin == true;
      }
      
      // Allow any authenticated user to create stories for an offer
      // Only admins should be able to delete stories (future implementation)
      match /stories/{storyId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.token.admin == true;
      }
    }
    
    // Allow users to follow/unfollow (manage their own document)
    // Only admins or the user themselves can read follower info.
    match /followers/{userId} {
      allow read: if request.auth != null && (request.auth.uid == userId || request.auth.token.admin == true);
      allow create, delete: if request.auth != null && request.auth.uid == userId;
      allow update: if false; // Should not be updatable
    }

    // Allow public read access to the follower count stats document.
    match /meta/stats {
      allow get: if true;
      allow list, write: if false;
    }
  }
}