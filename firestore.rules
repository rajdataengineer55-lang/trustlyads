
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is the designated admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';
    }

    // Rules for the 'offers' collection
    match /offers/{offerId} {
      // Anyone can read an offer
      allow read;
      // Only the admin can create, update, or delete an offer
      allow write: if isAdmin();

      // Rules for the 'reviews' subcollection
      match /reviews/{reviewId} {
        // Anyone can read reviews
        allow read;
        // Only authenticated users can create reviews
        allow create: if request.auth != null;
      }

      // Rules for the 'stories' subcollection
      match /stories/{storyId} {
        // Anyone can read a story
        allow read;
        // Only the admin can create a story
        allow create: if isAdmin();
      }
    }

    // Rules for the 'followers' collection
    match /followers/{userId} {
        // Anyone can read follower documents (needed for count)
        allow read;
        // A user can only write to their own follower document
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'meta' collection (for follower count)
    match /meta/stats {
      // Anyone can read the stats document
      allow get;
      // No one can write to the stats document directly
      allow write: if false;
    }
  }
}
