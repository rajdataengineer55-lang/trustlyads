rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to offers and their reviews
    match /offers/{offerId} {
      allow read: if true;
      
      // Allow create, update, delete only for authenticated users (admins)
      allow create, update, delete: if request.auth != null;

      // Allow authenticated users to add reviews
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null;
      }
    }
    
    // Allow public read for followers count
    match /followers/{userId} {
        allow read: if true;
        // Allow users to follow/unfollow themselves
        allow create, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
