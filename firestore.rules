rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to offers and their reviews
    match /offers/{offerId} {
      allow read: if true;
      allow write: if request.auth != null;

      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null; // Only signed-in users can create reviews
        allow update, delete: if false; // Disallow editing/deleting for now
      }
    }

    // Allow public read access to followers count
    match /followers/{followerId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can follow/unfollow
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
