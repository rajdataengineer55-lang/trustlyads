rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read on offers, but only authenticated users can write.
    match /offers/{offerId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;

      // Allow public read on reviews, but only authenticated users can write.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false; // Reviews generally shouldn't be editable
      }
    }

    // Allow public read on the followers collection to get the count.
    // Only authenticated users can follow/unfollow (create/delete their own doc).
    match /followers/{userId} {
      allow read: if true;
      allow create, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
