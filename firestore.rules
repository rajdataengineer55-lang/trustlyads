rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for the `reviews` collection group query
    match /{path=**}/reviews/{reviewId} {
      allow read: if true;
    }

    // Rule for the `offers` collection
    match /offers/{offerId} {
      allow read: if true;
      allow write: if request.auth != null; // For admin functionality

      // Nested rule for direct access to reviews of a specific offer
      match /reviews/{reviewId} {
        allow create: if request.auth != null; // Only logged-in users can create reviews
        allow update, delete: if false; // No one can edit or delete for now
      }
    }
    
    // Rule for the `followers` collection
    match /followers/{userId} {
      allow list, get: if true; 
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}