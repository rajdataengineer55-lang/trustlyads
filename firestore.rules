rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is the admin by their UID
    function isAdmin() {
      return request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMO9g0q1';
    }

    // --- Offers ---
    match /offers/{offerId} {
      // Admin can do anything.
      // Public can read non-hidden offers.
      allow read: if isAdmin() || resource.data.isHidden == false;
      allow write: if isAdmin();
      
      // --- Reviews (subcollection) ---
      match /reviews/{reviewId} {
        // Anyone authenticated can create a review.
        // Admin can do anything.
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if isAdmin();
      }
    }

    // --- Stories ---
    match /stories/{storyId} {
      // Public can read all stories.
      // Admin can create, update, and delete stories.
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Followers ---
    // Users can only manage their own follower document.
    // Admin can read the whole collection (for analytics, etc.)
    match /followers/{userId} {
      allow read: if isAdmin() || request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow delete: if request.auth.uid == userId;
    }
  }
}
