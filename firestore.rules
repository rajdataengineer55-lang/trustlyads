rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the admin by their UID
    function isAdmin() {
      return request.auth.uid == '8dbJ55nXdEXaOrlV4XosUMOq5E83';
    }

    // Rule for the 'offers' collection
    match /offers/{offerId} {
      // Admins can do anything. Anyone can read non-hidden offers.
      allow read: if !resource.data.isHidden || isAdmin();
      allow write: if isAdmin();

      // Rule for the 'reviews' subcollection
      match /reviews/{reviewId} {
        // Anyone can read reviews. Only logged-in users can create them.
        allow read: true;
        allow create: if request.auth != null;
        // Only admins can update or delete reviews.
        allow update, delete: if isAdmin();
      }
    }

    // Rule for the 'stories' collection
    match /stories/{storyId} {
      // Anyone can read stories.
      allow read: true;
      // Only admins can create, update, or delete stories.
      allow write: if isAdmin();
    }
  }
}
