rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Define the admin email address
    function isAdmin() {
      return request.auth.token.email == "dandurajkumarworld24@gmail.com";
    }

    // Default deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow anyone to read public-facing collections
    match /offers/{offerId} {
      allow read: if true;
      // Allow write only for the specific admin user
      allow write: if request.auth != null && isAdmin();
      
      match /reviews/{reviewId} {
        allow read: if true;
        // Allow any authenticated user to create a review
        allow create: if request.auth != null;
        allow update, delete: if false;
      }

      match /stories/{storyId} {
        allow read: if true;
         // Allow write only for the specific admin user
        allow write: if request.auth != null && isAdmin();
      }
    }
    
    // Followers can be created by any authenticated user, but only they can manage their own document.
    match /followers/{userId} {
      allow read: if true;
      allow create, delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Meta collection is readable by all, but writable only by admin.
    match /meta/{docId} {
        allow read: if true;
        allow write: if request.auth != null && isAdmin();
    }
  }
}
