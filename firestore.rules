rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to identify the admin user by their UID.
    function isAdmin() {
      return request.auth.uid == "8dbJ55nXdEXaOrlV4XosUMOq5eH3";
    }

    // Grant admin full read and write access to all collections.
    match /{path=**} {
      allow read, write: if isAdmin();
    }
    
    // Public read access for offers that are not hidden.
    match /offers/{offerId} {
      allow read: if !resource.data.isHidden;
      
      // Public users can create reviews.
      match /reviews/{reviewId} {
        allow read;
        allow create: if request.auth != null;
      }
    }
    
    // Public read access for stories.
    match /stories/{storyId} {
      allow read: if true;
    }
  }
}
