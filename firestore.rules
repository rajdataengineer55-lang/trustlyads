rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin claim
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Allow public read on offers, but restrict writes to admins.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if isAdmin(); // create, update, delete

      // Allow any authenticated user to create reviews
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow write: if isAdmin(); // Admin can moderate
      }

      // Allow admin to add stories
      match /stories/{storyId} {
          allow read: if true;
          allow write: if isAdmin();
      }
    }

    // Allow users to manage their own follower document
    match /followers/{userId} {
        allow read: if true;
        allow create, update, delete: if request.auth.uid == userId;
    }
    
    // Allow public read on the aggregated stats
    match /meta/stats {
      allow get: if true;
      allow write: if false; // Only backend functions can write
    }
  }
}
