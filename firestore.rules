
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read access for offers and stories, but restrict writes to admins.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;

      // Rules for the 'reviews' subcollection within each offer
      match /reviews/{reviewId} {
        // Anyone can read reviews
        allow read: if true;
        // Only authenticated users can create a review
        allow create: if request.auth != null;
        // Only admins can update or delete existing reviews
        allow update, delete: if request.auth != null && request.auth.token.admin == true;
      }
    }

    match /stories/{storyId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Secure the followers collection
    match /followers/{userId} {
      // Anyone can read the follower data (needed for public count)
      allow read: if true; 
      // A user can only create or delete their OWN follower document.
      // This prevents a user from making someone else follow/unfollow.
      allow create, delete: if request.auth != null && request.auth.uid == userId; 
    }
  }
}
