rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Admin with a custom claim can read/write everything.
    // Public can read visible offers, and all stories/reviews.
    match /{document=**} {
      allow read, write: if request.auth.token.admin == true;
    }

    match /offers/{offerId} {
      // Allow public read of offers that are NOT hidden
      allow read: if resource.data.isHidden == false;
      
      // Allow public to query/list the offers collection
      // This is needed for the main page to display offers.
      allow list: if true;
    }

    match /stories/{storyId} {
      // Allow public read and list of all stories
      allow list, read: if true;
    }

    match /offers/{offerId}/reviews/{reviewId} {
      // Allow public read and list of all reviews
      allow list, read: if true;
    }
  }
}
