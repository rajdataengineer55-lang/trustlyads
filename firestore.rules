
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Admin access for your real UID
    match /{document=**} {
      allow read, write: if request.auth.uid == '8dbJ55nXdEXaOrlV4XosUM0PTKe2';
    }

    // Public access rules
    match /offers/{offerId} {
      allow read: if true;

      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
    }

    match /stories/{storyId} {
      allow read: if true;
    }
  }
}
