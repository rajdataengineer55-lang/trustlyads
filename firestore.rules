
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read-only access to offers that are not hidden.
    // Allow authenticated admins to perform any action on any offer.
    match /offers/{offerId} {
      allow read: if !resource.data.isHidden || request.auth.token.admin == true;
      allow write: if request.auth.token.admin == true;

      // Allow authenticated users to create reviews.
      // Allow admins to delete them.
      match /reviews/{reviewId} {
        allow create: if request.auth != null;
        allow read: if true;
        allow update, delete: if request.auth.token.admin == true;
      }
      
      // Only admins can create/delete stories.
      // Everyone can view them.
      match /stories/{storyId} {
        allow read: if true;
        allow create, delete: if request.auth.token.admin == true;
      }
    }

    // Allow users to follow/unfollow (create/delete their own follower doc).
    // Allow admins to read/write any follower document.
    match /followers/{userId} {
      allow read, delete: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow write: if request.auth.token.admin == true; // Admin override
    }
    
    // Allow public read access to the aggregated stats document.
    // Disallow any client-side writes. This should only be updated by the backend.
    match /meta/stats {
      allow read: if true;
      allow write: if false; // Protect against client-side modification
    }
  }
}
