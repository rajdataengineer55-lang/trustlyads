
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for the `reviews` collection group query
    match /{path=**}/reviews/{reviewId} {
      allow read: if true;
    }

    // Rule for the `offers` collection
    match /offers/{offerId} {
      allow read: if true;
      // Allow write access ONLY to the specific admin email.
      allow write: if request.auth != null && request.auth.token.email == 'dandurajkumarworld24@gmail.com';

      // Nested rule for direct access to reviews of a specific offer
      match /reviews/{reviewId} {
        allow create: if request.auth != null; // Only logged-in users can create reviews
        allow update, delete: if false; // No one can edit or delete for now
      }
    }
    
    // Rule for the `followers` collection
    match /followers/{userId} {
      // Allow reading follower documents (e.g., for counts)
      allow get, list: if true;
      // Allow a user to only write to their own follower document
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rule for the `meta/stats` document for follower count
    match /meta/stats {
      allow get: if true;
      // Only allow backend functions to update stats (for future use)
      allow write: if false;
    }
  }
}
