
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Offers Collection ---
    // Anyone can read offers.
    // Only admins can create, update, or delete offers.
    match /offers/{offerId} {
      allow read: if true;
      allow write: if request.auth.token.admin == true;

      // --- Reviews Subcollection ---
      // Anyone can read reviews.
      // Any authenticated user can add a review.
      // Only admins can delete reviews.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow delete: if request.auth.token.admin == true;
        allow update: if false; // Don't allow reviews to be edited
      }
    }
    
    // --- Followers Collection ---
    // Logged-in users can follow/unfollow themselves.
    // Anyone can read the follower list (e.g., for counts).
    match /followers/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    // --- Stories Collection ---
    // Anyone can read stories.
    // Only admins can create or delete stories.
    // Authenticated users can update *only* the 'views' field.
    match /stories/{storyId} {
      allow read: if true;
      allow create, delete: if request.auth.token.admin == true;
      allow update: if request.auth != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['views']);
    }
  }
}
