rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to offers and their reviews
    match /offers/{offerId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write

      match /reviews/{reviewId} {
        allow read: if true;
        allow write: if request.auth != null; // Only authenticated users can write reviews
      }
    }

    // Allow public read access to followers count
    match /followers/{followerId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == followerId; // Only the user themselves can follow/unfollow
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
