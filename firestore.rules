rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Public Access Rules ---
    // Allow anyone to read offers and stories collections.
    match /offers/{offerId} {
      allow read: if true;
      
      // Allow anyone to read reviews, but only logged-in users can create them.
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
    }

    match /stories/{storyId} {
      allow read: if true;
    }

    // --- Admin-Only Write Rules ---
    // The admin has full write access to all collections.
    // This rule is checked AFTER the public read rules. It does not override them.
    // It grants ADDITIONAL write permission to the admin.
    match /{path=**} {
        allow write: if request.auth.uid == "8dbJ55nXdEXaOrlV4XosUMOq5E83";
    }
  }
}